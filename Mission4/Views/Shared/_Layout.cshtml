@model Mission4ModelValidation.Models.GradeModel
<!DOCTYPE html>

<html>
<head>
   @* this is the shared header for all views*@
    <!--references and links-->
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <link rel="shortcut icon" href="~/img/icon.png" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery-3.6.3.min.js"></script>

</head>

@*This is the shared body with the tag helpers and the bodies*@
<body>

    <nav>
        <a asp-controller="Sub" asp-action="Index">Home</a>
        <a asp-controller="Sub" asp-action="GradeCalculator">Grade Calculator</a>
    </nav>
    <h1>@ViewData["Header"]</h1>
    <div>
        @RenderBody()
    </div>

    <!-- More links to bootstrap and js-->
    <script src="~/lib/jquery/jquery-3.6.3.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/page.js"></script>

</body>
</html>
